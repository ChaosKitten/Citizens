<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE maptile SYSTEM "../xml/maptile.dtd">

<maptile>
	<coordinates x="0" y="0" />
	<asset type="building">
		<name>hut</name>
		<file>buildings/hut.xml</file>
	</asset>
	<building>
		<location>
			<vector 
				type="position"
				x="2000.0"
				y="0.0"
				z="2000.0" />
			<vector 
				type="orientation"
				x="0.0"
				y="0.0"
				z="0.0" />
			<!-- note: you don't need to override the scale, this is just here to prove it's possible to -->
			<vector 
				type="scale"
				x="200.0"
				y="50.0"
				z="200.0" />
		</location>
		<!-- brings in the 'hut' asset for this location -->
		<asset>hut</asset>
	</building>
	<!-- splats onto the terrain (shadows, paths, weather effects, etc.) -->
	<splat>
		<texture>
			DummyMapTiles/village.bmp
		</texture>
		<!-- TODO: add support for this
		<shader>
			shaders/weather.gc
		</shader>
		-->
	</splat>


</maptile>
